<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    //set layout background color
    <solid android:color="#F8CBAD" />

    //set frame edge width and color
    <stroke
        android:width="3dp"
        android:color="#000000"/>

    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />

    //set corner radius
    <corners android:radius="10dp" />
</shape>