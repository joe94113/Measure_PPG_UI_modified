<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="671dp"
        android:layout_margin="20dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="Data review"
            android:textColor="#000000"
            android:textSize="20dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/paraGraph3"
            android:layout_width="match_parent"
            android:layout_height="200dip" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="Heart rate"
            android:textColor="#000000"
            android:textSize="20dp" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/paraGraph"
            android:layout_width="match_parent"
            android:layout_height="200dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/update_graph_btn"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/show_image"
                android:text="更新圖表" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="回饋觸發次數:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/feedCount"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/SDNN_max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="SDNN 最大值:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/SDNN_max"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/br_max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="呼吸率 最小值:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/br_max"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HF_max_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:text="HF 最大值:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/HF_max"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>